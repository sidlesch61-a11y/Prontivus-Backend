# ==============================================
# Prontivus Backend - Environment Configuration
# ==============================================
# Copy this file to .env and update with your values

# -----------------
# Application
# -----------------
APP_NAME=Prontivus
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=false

# -----------------
# Security (REQUIRED)
# -----------------
SECRET_KEY=your-secret-key-here-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Optional: For RS256 algorithm
# JWT_PRIVATE_KEY=
# JWT_PUBLIC_KEY=

# -----------------
# Database (REQUIRED)
# -----------------
# Use asyncpg for async connections, psycopg for sync
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# -----------------
# Redis (Recommended)
# -----------------
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# -----------------
# File Storage (S3/MinIO)
# -----------------
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=prontivus-files
S3_REGION=us-east-1

# -----------------
# CORS Configuration
# -----------------
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------
# Email Configuration (Optional)
# -----------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password

# -----------------
# External Integrations (Optional)
# -----------------
# TISS API
TISS_API_URL=https://api.tiss.gov.br/v1
TISS_API_KEY=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_MODE=sandbox

# Telemedicine
TELEMED_PROVIDER=conexa
TELEMED_API_KEY=

# -----------------
# License Management (Optional)
# -----------------
RSA_LICENSE_PRIVATE=
RSA_LICENSE_PUBLIC=

# -----------------
# Monitoring (Optional)
# -----------------
SENTRY_DSN=
PROMETHEUS_PORT=8001

# -----------------
# Rate Limiting
# -----------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# -----------------
# Offline Sync
# -----------------
OFFLINE_GRACE_HOURS=72
SYNC_BATCH_SIZE=100

